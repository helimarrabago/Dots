<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@android:color/black">
    <View
        android:id="@+id/blockTop"
        android:layout_width="match_parent"
        android:layout_height="@dimen/bar_height"
        android:background="@color/colorPrimary" />
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/blockTop"
        android:layout_above="@+id/blockBottom"
        android:orientation="horizontal">
        <FrameLayout
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:layout_gravity="center"
            android:layout_margin="@dimen/scan_padding">
            <FrameLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_gravity="center"
                android:layout_margin="@dimen/scan_padding">
                <ImageView
                    android:id="@+id/outputImage"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center"
                    android:adjustViewBounds="true"/>
            </FrameLayout>
        </FrameLayout>
    </LinearLayout>
    <android.support.design.widget.AppBarLayout
        android:id="@+id/blockBottom"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:theme="@style/AppTheme.AppBarOverlay">
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="@dimen/bar_height"
            android:gravity="center_vertical"
            android:background="@color/colorPrimary"
            android:orientation="horizontal">
            <ImageButton
                android:id="@+id/cancelButton"
                android:layout_width="0dp"
                android:layout_height="@dimen/button_hw"
                android:layout_weight="1"
                android:padding="@dimen/button_padding"
                android:background="?selectableItemBackgroundBorderless"
                android:scaleType="centerInside"
                android:src="@mipmap/ic_cancel"/>
            <ImageButton
                android:id="@+id/proceedButton"
                android:layout_width="0dp"
                android:layout_height="@dimen/button_hw"
                android:layout_weight="1"
                android:padding="@dimen/button_padding"
                android:background="?selectableItemBackgroundBorderless"
                android:scaleType="centerInside"
                android:src="@mipmap/ic_proceed"/>
        </LinearLayout>
    </android.support.design.widget.AppBarLayout>
</RelativeLayout>