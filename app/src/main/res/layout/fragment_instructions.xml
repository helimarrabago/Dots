<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:padding="20dp"
    android:background="@color/background">
    <TextView
        android:id="@+id/acquire"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/acquire"
        android:textSize="16sp"
        android:textColor="@android:color/black"
        android:fontFamily="sans-serif-light"/>
    <LinearLayout
        android:id="@+id/cameraBlock"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/acquire"
        android:layout_marginTop="10dp"
        android:layout_marginStart="15dp"
        android:orientation="horizontal">
        <ImageButton
            android:id="@+id/cameraIcon"
            android:layout_width="60dp"
            android:layout_height="60dp"
            android:src="@drawable/camera_icon_small"
            android:background="@drawable/circular_button"/>
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="15dp"
            android:layout_gravity="center_vertical"
            android:text="@string/camera"
            android:textSize="13sp"
            android:textColor="@android:color/black"
            android:fontFamily="sans-serif-light"/>
    </LinearLayout>
    <LinearLayout
        android:id="@+id/galleryBlock"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/cameraBlock"
        android:layout_marginTop="10dp"
        android:layout_marginStart="15dp"
        android:orientation="horizontal">
        <ImageButton
            android:id="@+id/galleryIcon"
            android:layout_width="60dp"
            android:layout_height="60dp"
            android:src="@drawable/gallery_icon_small"
            android:background="@drawable/circular_button"/>
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="15dp"
            android:layout_gravity="center_vertical"
            android:text="@string/gallery"
            android:textSize="13sp"
            android:textColor="@android:color/black"
            android:fontFamily="sans-serif-light"/>
    </LinearLayout>
    <TextView
        android:id="@+id/crop"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/galleryBlock"
        android:layout_marginTop="20dp"
        android:text="@string/crop_"
        android:textSize="16sp"
        android:textColor="@android:color/black"
        android:fontFamily="sans-serif-light"/>
    <TextView
        android:id="@+id/cropSub"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/crop"
        android:layout_marginTop="5dp"
        android:layout_marginStart="15dp"
        android:text="@string/cropSub"
        android:textSize="13sp"
        android:textColor="@android:color/black"
        android:fontFamily="sans-serif-light"/>
    <TextView
        android:id="@+id/confirmPre"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/cropSub"
        android:layout_marginTop="20dp"
        android:text="@string/confirmPre"
        android:textSize="16sp"
        android:textColor="@android:color/black"
        android:fontFamily="sans-serif-light"/>
    <TextView
        android:id="@+id/confirmPreSub"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/confirmPre"
        android:layout_marginTop="5dp"
        android:layout_marginStart="15dp"
        android:text="@string/confirmPreSub"
        android:textSize="13sp"
        android:textColor="@android:color/black"
        android:fontFamily="sans-serif-light"/>
    <TextView
        android:id="@+id/confirmTrans"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/confirmPreSub"
        android:layout_marginTop="20dp"
        android:text="@string/confirmTrans"
        android:textSize="16sp"
        android:textColor="@android:color/black"
        android:fontFamily="sans-serif-light"/>
    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/confirmTrans"
        android:layout_marginTop="5dp"
        android:layout_marginStart="15dp"
        android:text="@string/confirmTransSub"
        android:textSize="13sp"
        android:textColor="@android:color/black"
        android:fontFamily="sans-serif-light"/>
</RelativeLayout>
