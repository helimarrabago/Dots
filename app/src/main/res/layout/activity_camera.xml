<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/colorPrimaryDark"
    tools:context="capstone.dots.CameraActivity">
    <capstone.dots.AutoFitTextureView
        android:id="@+id/texture"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentStart="true"
        android:layout_alignParentTop="true"/>
    <FrameLayout
        android:layout_width="@dimen/accelerometer_hw"
        android:layout_height="@dimen/accelerometer_hw"
        android:layout_alignParentBottom="true"
        android:layout_alignParentStart="true"
        android:layout_marginStart="@dimen/accelerometer_margin"
        android:layout_marginBottom="@dimen/accelerometer_margin">
        <TextView
            android:id="@+id/accelerometer"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:textColor="@android:color/white"/>
    </FrameLayout>
    <ImageButton
        android:id="@+id/capture"
        android:layout_height="@dimen/capture_hw"
        android:layout_width="@dimen/capture_hw"
        android:layout_alignParentBottom="true"
        android:layout_centerHorizontal="true"
        android:layout_marginBottom="@dimen/capture_margin"
        android:padding="@dimen/capture_padding"
        android:src="@mipmap/ic_camera"
        android:background="@drawable/circular_button"
        android:scaleType="centerInside"/>
</RelativeLayout>
