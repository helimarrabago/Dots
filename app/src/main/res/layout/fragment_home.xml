<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:padding="@dimen/activity_margin"
    android:background="@color/background">
    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:layout_centerInParent="true"
        android:gravity="center">
        <com.andexert.library.RippleView
            android:id="@+id/camera_button"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginBottom="@dimen/home_button_margin"
            app:rv_rippleDuration="200">
            <ImageButton
                android:layout_width="@dimen/home_button_hw"
                android:layout_height="@dimen/home_button_hw"
                android:background="@drawable/circular_button"
                android:src="@mipmap/ic_camera"
                android:padding="@dimen/home_button_padding"
                android:scaleType="fitCenter"/>
        </com.andexert.library.RippleView>
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginBottom="@dimen/home_caption_margin"
            android:textSize="@dimen/home_caption_size"
            android:textColor="@android:color/black"
            android:text="@string/camera_caption"/>
        <com.andexert.library.RippleView
            android:id="@+id/gallery_button"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginBottom="@dimen/home_button_margin"
            app:rv_rippleDuration="200">
            <ImageButton
                android:layout_width="@dimen/home_button_hw"
                android:layout_height="@dimen/home_button_hw"
                android:background="@drawable/circular_button"
                android:src="@mipmap/ic_gallery"
                android:padding="@dimen/home_button_padding"
                android:scaleType="fitCenter"/>
        </com.andexert.library.RippleView>
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textSize="@dimen/home_caption_size"
            android:textColor="@android:color/black"
            android:text="@string/gallery_caption"/>
    </LinearLayout>
</RelativeLayout>
